{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite faz o build, tsc Ã© para checagem de tipos
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    /* Paths for absolute imports (optional) */
    // "baseUrl": "./src",
    // "paths": {
    //   "@components/*": ["components/*"],
    //   "@hooks/*": ["hooks/*"],
    //   "@services/*": ["services/*"],
    //   "@utils/*": ["utils/*"],
    //   "@constants/*": ["constants/*"],
    //   "@contexts/*": ["contexts/*"],
    //   "@pages/*": ["pages/*"],
    //   "@assets/*": ["assets/*"]
    // }
  },
  "include": ["src", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
